<!-- Head Partial -->
<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/styles/product.css">
</head>

<body>
  <!-- Navigation Partial -->
  <%- include('../includes/navigation.ejs') %>

  <main>
    <h1>All Products</h1>
    <% if(products.length) { %>
    <div class="grid">
      <% for (const product of products) { %>
      <article class="card product-item">
        <header class="card__header">
          <h1 class="product__title"><%= product.title %></h1>
        </header>
        <div class="card__image">
          <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
        </div>
        <div class="card__content">
          <h2 class="product__price">$<%= product.price %></h2>
          <p class="product__description"><%= product.description %></p>
        </div>
        <div class="card__actions">
          <a href="/products/<%= product._id %>" class="btn">Details</a>
          <%- include('../includes/add-to-cart.ejs', {product}) %>
        </div>
      </article>
      <% } %>
    </div>
    <section class="pagination">
      <% if (currentPage !== 1 && prevPage !== 1) {%>
      <a href="/products?page=1">1</a>
      <% } %>

      <% if (hasPrevPage) { %>
      <a href="/products?page=<%= prevPage %>"><%= prevPage %></a>
      <% } %>


      <a href="/products?page=<%= currentPage %>" class='active'><%= currentPage %></a>

      <% if (hasNextPage) { %>
      <a href="/products?page=<%= nextPage %>"><%= nextPage %></a>
      <% } %>

      <% if (lastPage !== currentPage && nextPage !== lastPage) { %>
      <a href="/products?page=<%= lastPage %>"><%= lastPage %></a>

      <% } %>
    </section>
    <% } else { %>
    <h2>No Products Found</h2>
    <% } %>

  </main>

  <!-- End Partial -->
  <%- include('../includes/end.ejs') %>