<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <%- include('../includes/errors.ejs') %>
    <form class="login-form" action="/auth/signup" method="POST">
      <div class="form-control">
        <label for="email">Email Address</label>
        <input class="<%= errors.find(e => e.path === 'email') ? 'invalid' : '' %>" type="email" name="email" id="email"
          value="<%= prevInput.email %>" required>
      </div>
      <div class="form-control">
        <label for="password">Password</label>
        <input class="<%= errors.find(e => e.path === 'password' || e.path === 'confirmPassword') ? 'invalid' : '' %>"
          type="password" name="password" id="password">
      </div>
      <div class="form-control">
        <label for="confirmPassword">Confirm Password</label>
        <input class="<%= errors.find(e => e.path === 'confirmPassword') ? 'invalid' : '' %>" type="password"
          name="confirmPassword" id="confirmPassword">
      </div>

      <button class="btn" type="submit">Sign Up</button>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>